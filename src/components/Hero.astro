---
import { Anchor, Star, Fish } from "lucide-astro";
---

<header
  class="relative h-screen flex flex-col justify-center items-center text-center overflow-hidden bg-linear-to-b from-sky-100 via-cyan-50 to-white"
>
  <div
    class="absolute top-20 left-10 w-24 h-24 bg-cyan-200 rounded-full mix-blend-multiply filter blur-xl opacity-40 animate-float"
  >
  </div>
  <div
    class="absolute bottom-40 right-10 w-32 h-32 bg-blue-200 rounded-full mix-blend-multiply filter blur-xl opacity-40 animate-float-delayed"
  >
  </div>

  <div class="flex justify-between flex-col md:flex-row md:gap-44 z-10">
    <div
      class="reveal bg-white/70 backdrop-blur-sm p-4 rounded-full shadow-sm border border-cyan-100 flex items-center gap-4 max-w-fit mx-auto mb-4"
    >
      <div class="relative w-72 h-72 md:w-125 md:h-125 shrink-0">
        <div
          class="absolute inset-0 bg-linear-to-tr from-cyan-300 to-blue-300 rounded-full animate-spin-slow opacity-30"
        >
        </div>
        <img
          src="/foto-francisco.jpg"
          alt="Francisco"
          class="relative w-full h-full object-cover rounded-full border-2 border-white shadow-inner"
        />
      </div>
    </div>

    <div class="reveal relative mb-20 flex flex-col justify-center">
      <Fish class="w-8 h-8 text-cyan-400 mx-auto mb-6 opacity-70" />
      <p
        class="text-cyan-600 tracking-[0.2em] uppercase text-sm mb-4 font-bold bg-white/50 inline-block px-4 py-1 rounded-full"
      >
        Â¡Nuestro pececito cumple 1!
      </p>
      <h1
        class="text-7xl md:text-9xl text-slate-700 mb-4 font-(family-name:--font-titan) leading-tight"
      >
        Francisco
      </h1>
      <div class="w-16 h-1 bg-cyan-300 mx-auto my-6 rounded-full"></div>
      <p class="text-xl md:text-2xl text-slate-500 font-light mb-8">
        7 de Marzo, 2026
      </p>

      <a
        href="#rsvp"
        class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden font-medium text-cyan-600 border-2 border-cyan-400 rounded-full shadow-md transition duration-300"
      >
        <span
          class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-cyan-400 group-hover:translate-x-0 ease"
        >
          <Star class="w-5 h-5" />
        </span>
        <span
          class="absolute flex items-center justify-center w-full h-full text-cyan-600 transition-all duration-300 group-hover:translate-x-full"
          >Confirmar Asistencia</span
        >
        <span class="relative invisible">Confirmar Asistencia</span>
      </a>
    </div>
  </div>
</header>

<style>
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
</style>
