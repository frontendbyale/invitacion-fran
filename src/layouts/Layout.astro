---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta property="og:title" content="隆El Primer A帽ito de Francisco! " />
    <meta
      property="og:description"
      content="Te invito a celebrar mi cumple bajo el mar. 隆Entra para ver los detalles y confirmar tu asistencia!"
    />

    <meta
      property="og:image"
      content="https://https://invitaciondefran.netlify.app/miniatura.png"
    />

    <meta
      property="og:url"
      content="https://https://invitaciondefran.netlify.app/"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Cumple de Francisco" />
  </head>
  <body
    class="font-sans antialiased text-slate-600 bg-slate-50 selection:bg-cyan-200 selection:text-cyan-900"
  >
    <slot />
  </body>
</html>

<style is:global>
  /* Definici贸n de fuentes */

  @import url("https://fonts.googleapis.com/css2?family=Titan+One&display=swap");
  :root {
    --font-serif: "Playfair Display", serif;
    --font-sans: "Lato", sans-serif;
    --font-titan: "Titan One", sans-serif;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-titan);
  }

  body {
    font-family: var(--font-sans);
  }

  /* Animaci贸n de flotaci贸n (efecto agua) */
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float 5s ease-in-out infinite 1s;
  }

  /* Animaci贸n suave de entrada al hacer scroll */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s ease-out;
  }

  .reveal.active {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes swim-realistic-right {
    0% {
      transform: translateX(-20vw) translateY(0) rotate(2deg);
      animation-timing-function: ease-out;
    }
    25% {
      transform: translateX(30vw) translateY(-40px) rotate(-3deg);
      animation-timing-function: ease-in-out;
    }
    50% {
      transform: translateX(60vw) translateY(10px) rotate(3deg) scale(1.05); /* Un peque帽o "impulso" */
      animation-timing-function: ease-in-out;
    }
    75% {
      transform: translateX(90vw) translateY(-25px) rotate(-2deg);
      animation-timing-function: ease-in;
    }
    100% {
      transform: translateX(120vw) translateY(20px) rotate(2deg);
    }
  }

  /* Nado ondulado de Derecha a Izquierda (Espejado) */
  @keyframes swim-realistic-left {
    0% {
      /* scaleX(-1) voltea la imagen horizontalmente */
      transform: translateX(120vw) translateY(0) rotate(-2deg) scaleX(-1);
      animation-timing-function: ease-out;
    }
    30% {
      transform: translateX(80vw) translateY(50px) rotate(3deg) scaleX(-1);
      animation-timing-function: ease-in-out;
    }
    60% {
      transform: translateX(40vw) translateY(-30px) rotate(-3deg) scaleX(-1)
        scale(1.05);
      animation-timing-function: ease-in-out;
    }
    100% {
      transform: translateX(-20vw) translateY(20px) rotate(2deg) scaleX(-1);
    }
  }

  /* Flotaci贸n suave y lenta (mejorada) */
  @keyframes float-soft {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(10px, -15px) rotate(2deg);
    }
    50% {
      transform: translate(-5px, -25px) rotate(0deg);
    }
    75% {
      transform: translate(-15px, -10px) rotate(-2deg);
    }
  }

  /* --- CLASES PARA APLICAR LAS ANIMACIONES --- */
  /* Usamos tiempos largos (40s, 50s) para que el nado sea majestuoso y lento */

  .animate-swim-right {
    animation: swim-realistic-right 45s infinite;
  }

  .animate-swim-left {
    animation: swim-realistic-left 55s infinite;
  }

  .animate-float-animal {
    animation: float-soft 12s ease-in-out infinite;
  }

  /* Animaci贸n para la foto de Fran */
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
</style>
